<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/calculatorDisplay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#000000"
        android:gravity="center_vertical|end"
        android:padding="8dp"
        android:text="@string/_calculator_display_text"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_7" />

            <Button
                android:id="@+id/button8"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_8" />

            <Button
                android:id="@+id/button9"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_9" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_divide" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_4" />

            <Button
                android:id="@+id/button5"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_5" />

            <Button
                android:id="@+id/button6"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_6" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_multiply" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_1" />

            <Button
                android:id="@+id/button2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_2" />

            <Button
                android:id="@+id/button3"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_3" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_subtract" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/button0"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_0"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/buttonDecimal"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_dot" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_equals" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_add" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/buttonClear"
                android:layout_margin="2dp"
                android:layout_span="3"
                android:layout_weight="1"
                android:text="@string/_clear" />

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:text="@string/_plus_minus" />
        </TableRow>

    </TableLayout>

</LinearLayout>