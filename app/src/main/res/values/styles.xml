<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"></style>

    <style name="LargeText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="DecimalLimitEditText">
        <attr name="decimalPlaces" format="integer" />
    </declare-styleable>
</resources>